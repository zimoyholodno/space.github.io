---
import MainColWithGraf from "./MainColWithGraf.astro";
import MainColWithMan from "./MainColWithMan.astro";
---

<div class="mainComp">
    <div class="mainComp__container">
        <div class="mainComp__col">
            <div class="mainComp__text">
                <div class="mainComp__line"></div>
                <div class="mainComp__title">Промо-давление увеличивается</div>
            </div>
            <MainColWithGraf />
        </div>
        <div class="mainComp__col">
            <div class="mainComp__text">
                <div class="mainComp__line"></div>
                <div class="mainComp__title">
                    80% данных не используется производителями
                </div>
            </div>
            <MainColWithMan />
        </div>
    </div>
</div>

<style is:global lang="scss">
    .mainComp {
        display: flex;
        width: 100%;
        max-width: 1920px;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        padding: 10px;
        

        &__text {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        &__line {
            background-color: #e01e2e;
            width: 75px;
            height: 8px;
        }

        &__title {
            font-size: 32px;
            font-weight: bold;
            font-family: "PF Agora Sans Pro";
            width: 490px;
        }

        &__container {
            width: 100%;
            max-width: 1200px;
            display: flex;
        }

        &__col {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
        }
    }

    @include desktop {
        .mainComp {
            width: 100%;
            padding-left: 20px;
            &__container {
                width: 90%;
                flex-direction: column;
                gap: 20px;
            }

            &__col {
                margin-top: 20px;
                margin-left: 0px;
            }
        }
    }

    @include laptop {
        .mainComp {
            width: 100%;
            &__container {
                width: 100%;
                flex-direction: column;
                gap: 20px;
            }

            &__col {
                margin-top: 20px;
                margin-left: 0px;
            }
        }
    }

    @include tablet {
        .mainComp {
            width: 100%;
            padding: 0px;
            &__container {
                width: 80%;
            }
            &__container {
                width: 90%;
                flex-direction: column;
            }
        }
    }

    @include phone {
        .mainComp {
            &__container {
                width: 90%;
            }

            &__col {
                margin-top: 20px;
                margin-left: 0px;
            }

            &__title {
                font-size: 24px;
                width: 250px;
            }

            &__line {
                width: 40px;
                height: 5px;
            }
        }
    }
</style>
