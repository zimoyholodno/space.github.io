<div class="mainCircle">
    <div class="mainCircle__one"></div>
    <div class="mainCircle__two"></div>
    <div class="mainCircle__three"></div>
</div>

<style is:global lang="scss">
    .mainCircle {
        display: grid;
        place-items: center;

        &__one {
            // width: 595px;
            // height: 595px;
            width: 540px;
            height: 540px;
            border: 1px solid;
            border-radius: 50%;
            color: #dddddd;
            grid-area: 1 / 1;
        }

        &__two {
            // width: 446px;
            // height: 446px;
            width: 400px;
            height: 400px;
            border: 1px solid;
            border-radius: 50%;
            color: #dddddd;
            grid-area: 1 / 1;
        }

        &__three {
            // width: 292px;
            // height: 292px;
            width: 240px;
            height: 240px;
            border: 1px solid;
            border-radius: 50%;
            color: #dddddd;
            grid-area: 1 / 1;
        }
    }

    @include desktop {
        .mainCircle {
            &__one {
                width: 540px;
                height: 540px;
                // color: #000;
            }

            &__two {
                width: 400px;
                height: 400px;
                // color: #000;
            }

            &__three {
                width: 240px;
                height: 240px;
                // color: #000;
            }
        }
    }

    @include laptop {
        .mainCircle {
            &__one {
                width: 500px;
                height: 500px;
            }

            &__two {
                width: 380px;
                height: 380px;
            }

            &__three {
                width: 210px;
                height: 210px;
            }
        }
    }

    @include tablet {
        .mainCircle {
            &__one {
                width: 420px;
                height: 420px;
            }
            &__two {
                width: 300px;
                height: 300px;
            }

            &__three {
                width: 210px;
                height: 210px;
            }
        }
    }

    @include phone {
        .mainCircle {
            &__one {
                width: 250px;
                height: 250px;
            }
            &__two {
                width: 200px;
                height: 200px;
            }

            &__three {
                width: 150px;
                height: 150px;
            }
        }
    }
</style>
